<div class="hero">
  <div class="container">
    <div class="row">
      <div class="hero-heading">
      What do you need dear?<br>
      Find it here.<br><br><br><br><br>
      <p>I.Could.Be.The.One</p>
    </div>
  </div>

  <%= render 'search/form' %>
  </div>
</div>


<div class="container section">
	<h1>
		Newest Service
	</h1>
	<div class="row">
    <% @service.each do |service| %>
      <div class="col-md-3">
        <%= link_to(service) do %>
        <div class="gig-card">
          <center> <%= image_tag service.image.url(:small) %> </center>
          <h4>
            <%= service.title %>
          </h4>
          <h3>
            <%= service.price %>
          </h3>
        </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
